pipeline {
    agent any

    tools {
        maven 'MVN_HOME'
    }

    stages {
        stage('Maven Build') {
            steps {
                sh "mvn clean package"
            }

        }

        stage('Docker Build') {
            steps {
                sh "sudo docker build -t micheledevops/project ."
            }
        }

        stage('DockerHub Push') {
            steps {
                sh "sudo -S docker login -u micheledevops -p pizzaMargherita"
                sh "sudo docker push micheledevops/lab"
            }
        }

        stage('Docker Deploy') {
            steps {
                sh "ansible-playbook deploy-docker.yml"
            }
        }
    }
}
