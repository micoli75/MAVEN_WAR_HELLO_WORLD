pipeline {
    agent any

    tools {
        maven 'MVN_HOME'
    }

    stages {
        stage('Maven Build') {
            steps {
                sh "mvn clean package"
            }

        }

        stage('Docker Build') {
            steps {
                sh "sudo docker login -u micheleDevOps -p pizzaMargherita"
                sh "sudo docker build -t micheledevops/project:latest ."
            }
        }

        stage('DockerHub Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-pass', passwordVariable: 'pizzaMargherita', usernameVariable: 'micheledevops')])
                {
                sh "sudo docker push micheledevops/project:latest"
                }
            }
        }

        stage('Docker Deploy') {
            steps {
                sh "ansible-playbook deploy-docker.yml"
            }
        }
    }
}
